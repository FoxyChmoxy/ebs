@model IEnumerable<BusinessLogic.Dto.UserDto>

@{
    ViewData["Title"] = "Index";
}

    <style>
        .top-book-card {
            width: 30%;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
            padding:10px;
        }
    </style>

<section style="padding-top:60px;">
    <div class="container-fluid">
        <hr />
        <div class="row pt-3">
            <div class="col-md-3">
                @await Html.PartialAsync("../Shared/PartialViews/_MenuComponent.cshtml", ViewData["Id"])
            </div>
            <div class="col-md-9">
                <h3>Your current status: <span class="badge badge-light" id="user-status"></span></h3>
                <h5>Until the next status you have left:</h5>
                <div class="row mb-1" id="user-status-todolist"></div>
                <h3 class="display-4 border-bottom mb-4">Top-3 Books</h3>
                <div class="row mb-1" id="ebs-top-books"></div>
                <h3 class="display-4 border-bottom mb-4">Top-3 Users</h3>
                <div class="row" id="ebs-top-users"></div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/js/app/mainController.js"></script>
}