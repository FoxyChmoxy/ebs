@model UserInterface.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section style="padding-top:50px;">
    <div class="container pt-5">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 text-light pl-4 pr-4 pt-4 pb-4" style="background: #3C3A52; box-shadow: 0 0 10px rgba(0,0,0,0.5);border-radius:5px;">
                <h1>Войти</h1>
                <a asp-action="Signup" asp-controller="User">Ещё нет аккаунта?</a>
                <hr />
                <form asp-action="Login" asp-controller="User" asp-anti-forgery="true" method="post">
                    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                    <div>
                        <div class="form-group">
                            <label asp-for="Email">Введите Email</label>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger form-text"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Введите пароль</label>
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger form-text"></span>
                        </div>
                        <div class="form-group pt-4">
                            <input type="submit" value="Войти" class="btn" style="background:#6C63FF;color:white; width:100%;" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</section>