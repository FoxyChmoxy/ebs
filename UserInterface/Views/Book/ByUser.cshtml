@model List<UserInterface.ViewModels.Entities.BookViewModel>

@{
    ViewData["Title"] = "Books";
}
<section style="padding-top:50px;">
    <div class="container pt-5">
        <a asp-controller="User" asp-action="Index">Come back to Dashboard</a>
        @if (Model.Count > 0)
        {
            <h1>ELibrary - @User.Identity.Name</h1>
        }
        <div class="row">
            @if (Model.Count > 0)
            {
                @foreach (var book in Model)
                {
                    <div class="col-md-4">
                        @book.Author
                    </div>
                }
            }
            else
            {
                <div class="col-md-12 text-center pt-5 mt-5">
                    <h3 class="display-3">There is no one book :(</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                    <a class="btn btn-success text-light" asp-controller="Book" asp-action="Create"><i class="fa fa-plus-square mr-2"></i> Add book</a>
                </div>
            }
        </div>
    </div>
</section>