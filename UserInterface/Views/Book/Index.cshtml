@{
    ViewData["Title"] = "Index";
}

<section style="padding-top:50px">
    <div class="container pt-5">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search book" value="@ViewBag.Search">
                    <div class="input-group-append">
                        <button class="btn btn-outline-success" type="button">Find it</button>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".ebs-search").css("display", "none");
        });
    </script>
}
